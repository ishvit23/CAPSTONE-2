# Backend environment configuration
# Copy to `.env` inside `Backend_new/` before running the server.

# Required: Google Gemini API key used for chat + embeddings
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback/

# Frontend base URL for redirects after authentication
FRONTEND_APP_URL=http://localhost:5173

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=digibuddy

# Optional: override knowledge base directory (defaults to `knowledge_base`)
# KNOWLEDGE_BASE_DIR=knowledge_base

